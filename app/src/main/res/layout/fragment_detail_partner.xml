<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ar.com.antaresconsulting.antonstockapp.PartnerDetailFragment" >
    

    <ImageView     
        android:id="@+id/partnerImg"
        android:layout_width="@dimen/part_img_w"
        android:layout_height="@dimen/part_img_h"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_user_employee" />

    <View
        android:id="@+id/sepProdThumb"
        android:layout_width="4dp"
        android:layout_height="@dimen/part_img_h"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/partnerImg"
        android:background="@color/actionbar_theme_color" />

    <TextView
        android:id="@+id/nombrePart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/sepProdThumb"
        android:text="Nombre_Partner"
        android:textSize="@dimen/part_name" />

    <ImageView
        android:id="@+id/icAddress"
        android:layout_width="@dimen/part_icon_w"
        android:layout_height="@dimen/part_icon_h"
        android:layout_below="@id/nombrePart"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/sepProdThumb"
        android:src="@drawable/ic_address" />

    <TextView
        android:id="@+id/domicilioPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icAddress"
        android:layout_alignBottom="@id/icAddress"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:text="Domicilio_Part"
        android:textSize="@dimen/app_text_size" />

    <ImageView
        android:id="@+id/icEmail"
        android:layout_width="@dimen/part_icon_w"
        android:layout_height="@dimen/part_icon_h"
        android:layout_below="@id/domicilioPart"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/sepProdThumb"
        android:src="@drawable/ic_email" />
    
    <TextView
        android:id="@+id/emailPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icEmail"
        android:layout_toRightOf="@id/icEmail"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:text="Email_Part"
        android:textSize="@dimen/app_text_size" />
   
    <ImageView
        android:id="@+id/icPhone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/emailPart"
        android:layout_width="@dimen/part_icon_w"
        android:layout_height="@dimen/part_icon_h"
        android:layout_toRightOf="@id/sepProdThumb"
        android:src="@drawable/ic_phone" />             
    <TextView
        android:id="@+id/phonePart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/icPhone"
        android:layout_toRightOf="@id/icPhone"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:text="Phone_Part"
        android:textSize="@dimen/app_text_size" />
    <ImageView
        android:id="@+id/icWeb"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/phonePart"
        android:layout_width="@dimen/part_icon_w"
        android:layout_height="@dimen/part_icon_h"
        android:layout_toRightOf="@id/sepProdThumb"
        android:src="@drawable/ic_web" />            

    <TextView
        android:id="@+id/webPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/icWeb"
        android:layout_toRightOf="@id/icWeb"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:text="Web_Part"
        android:textSize="@dimen/app_text_size" />
 
    <ImageView
        android:id="@+id/icCuit"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/icWeb"
        android:layout_width="@dimen/part_icon_w"
        android:layout_height="@dimen/part_icon_h"
        android:layout_toRightOf="@id/sepProdThumb"
        android:src="@drawable/ic_cuit" />            

    <TextView
        android:id="@+id/cuitPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/icCuit"
        android:layout_toRightOf="@id/icCuit"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:text="CUIT_Part"
        android:textSize="@dimen/app_text_size" />

</RelativeLayout>
