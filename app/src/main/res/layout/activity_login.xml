<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frmContainer"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal" >

    <TableLayout
        android:id="@+id/login_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="@dimen/login_logo_width"
                android:layout_height="@dimen/login_logo_height"
                android:layout_span="2"
                android:src="@drawable/login_mobile" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/login_icon_height"
                android:maxWidth="@dimen/login_icon_width"
                android:src="@drawable/icon_login_u" />

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginTop="5dip"
                android:hint="@string/hint_username"
                android:singleLine="true"
                android:text="admin"
                android:width="@dimen/login_textfield_width" >

                <!-- <requestFocus /> -->
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:adjustViewBounds="true"
                android:maxHeight="90dp"
                android:maxWidth="90dp"
                android:src="@drawable/icon_login_p" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:hint="@string/hint_pass"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text="admin"
                android:width="@dimen/login_textfield_width" />
        </TableRow>

        <TableLayout
            android:gravity="center"
            android:paddingTop="20dp" >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/login_btn" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/exit_btn" />
            </TableRow>
        </TableLayout>
    </TableLayout>

</ScrollView> <!-- Login Form Ends -->
