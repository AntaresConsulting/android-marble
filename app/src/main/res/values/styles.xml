<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AntonTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/bg_theme_color</item>
        <item name="android:colorBackground">@color/bg_theme_color</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:actionBarStyle">@style/AntonActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/AntonActionBarTabText</item>
        <item name="actionBarStyle">@style/AntonActionBar</item>
        <item name="actionBarTabTextStyle">@style/AntonActionBarTabText</item>

        <item name="android:actionMenuTextColor">@color/actionbar_theme_text_color</item>
        <item name="actionMenuTextColor">@color/actionbar_theme_text_color</item>
        <item name="android:actionMenuTextAppearance">@style/menuTextStyle</item>
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
    </style>
    <style name="AntonThemeNoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/bg_theme_color</item>
        <item name="android:colorBackground">@color/bg_theme_color</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:actionMenuTextColor">@color/actionbar_theme_text_color</item>
        <item name="actionMenuTextColor">@color/actionbar_theme_text_color</item>
        <item name="android:actionMenuTextAppearance">@style/menuTextStyle</item>
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
    </style>

    <style name="menuTextStyle">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textColor">@color/actionbar_theme_text_color</item>
    </style>

    <style name="AntonActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/color_primary</item>
        <item name="android:titleTextStyle">@style/AntonActionBar.TitleTextStyle</item>
        <!-- Support library compatibility -->
        <item name="background">@color/color_primary</item>
        <item name="titleTextStyle">@style/AntonActionBar.TitleTextStyle</item>
    </style>

    <style name="AntonActionBar.TitleTextStyle"   parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_theme_text_color</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="AntonActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/actionbar_theme_text_color</item>
    </style>


    <style name="LoginTheme" parent="AntonTheme">
        <item name="android:textSize">@dimen/app_text_size</item>
    </style>

	<style name="NoActionBar" parent="AntonTheme">
	    <item name="android:windowActionBar">false</item>
	    <item name="android:windowNoTitle">true</item>
	</style>     
  	<style name="PopupWindowAnimation">
                 <item name="android:windowEnterAnimation">@anim/fade_in</item>
                  <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>