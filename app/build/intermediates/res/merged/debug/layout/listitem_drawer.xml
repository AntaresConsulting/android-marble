<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/item_drawer_margin"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/drawer_icon"
        android:layout_width="@dimen/item_drawer_icon_dim"
        android:layout_height="@dimen/item_drawer_icon_dim"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/drawer_itemName"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/drawer_icon"
        android:textSize="@dimen/item_drawer_text_size" />


</RelativeLayout>
