<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal" 
    tools:context="ar.com.antaresconsulting.antonstockapp.ProductTypeFragment" >

    <ImageButton
        android:id="@+id/mpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_mp" 
        android:onClick="setMP"
        style="?android:attr/borderlessButtonStyle"
        />

    <ImageButton
        android:id="@+id/insumosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:onClick="setInsumos"
        android:src="@drawable/ic_action_insumos" />

    <ImageButton
        android:id="@+id/bachasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setBachas"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/ic_action_bachas" />
    
    <ImageButton
        android:id="@+id/serviciosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setServicios"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/ic_action_servicios" />
</LinearLayout>