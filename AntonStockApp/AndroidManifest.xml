<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.com.antaresconsulting.antonstockapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".AntonStockApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AntonTheme" >
        <activity
            android:name=".AntonLauncherActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_launcher"
            >
        </activity>        
        <activity
            android:name="ar.com.antaresconsulting.antonstockapp.partner.PartnerListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name="ar.com.antaresconsulting.antonstockapp.product.ProductListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity        
            android:name=".PartnerDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_partner_detail"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.partner.PartnerListActivity" />
        </activity>
        <activity
            android:name="ar.com.antaresconsulting.antonstockapp.product.ProductDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_product_detail"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.product.ProductListActivity" />
        </activity>
        <activity
            android:name=".InProducts"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_in_products"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".SubmitProducts"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_in_products"
			 >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".ReEnterProducts"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_in_products"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".MoveProducts"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_out_products"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".AddProductActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_add_product"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.ProductListActivity" />
        </activity>
        <activity
            android:name=".ConsumeInsumo"
            android:label="@string/title_activity_consume_insumos"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".AddPMActivity"
            android:label="@string/title_activity_add_pm"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".AddOEActivity"
            android:label="@string/title_activity_add_oe"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ar.com.antaresconsulting.antonstockapp.AntonLauncherActivity" />
        </activity>
        <activity
            android:name=".ProductTypeActivity"
            android:label="@string/title_activity_product_type" >
        </activity>
    </application>

</manifest>
